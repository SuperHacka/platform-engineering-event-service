# Example Terraform variables
# Copy this to terraform.tfvars and customize as needed

project_id                    = "axium-assessment"
region                        = "us-central1"
service_name                  = "event-service"
artifact_registry_repository  = "axium-asssessment-image-bucket"
image_tag                     = "latest"
allow_unauthenticated         = true

# Environment variables
env_vars = {
  ENV                 = "production"
  PROCESSING_DELAY_MS = "1000"
}

# Scaling configuration
min_instances = 0
max_instances = 10

# Resource limits
cpu_limit    = "1"
memory_limit = "512Mi"
